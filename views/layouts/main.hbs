<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <!-- Do not forget to change the path to the css file -->
    <title>{{title}}</title>
    <link href="/static/css/style.css" type="text/css" rel="stylesheet" />
  </head>

  <body>

    <div id="box">
      {{#if error}}
        <div>
            <div class="errorContainer">
              <p>{{error}}</p>
            </div>
        </div>
      {{/if}}

      <nav>
        <a href="/">Home</a>
        <ul>
          <li><a href="/housing">Housing for rent</a></li>
          <!-- Logged user - така контролираме какво да се покаже при какви условия-->
          {{#if user}}
            <li><a href="/housing/create">Create offer</a></li>
            <li><a href="/search">Search</a></li>
            <li><a href="/auth/logout">Logout</a></li>
          {{else}}
            <!-- Guest user -->
            <li><a href="/auth/login">Login</a></li>
            <li><a href="/auth/register">Register</a></li>
          {{/if}}
        </ul>
      </nav>

      {{{body}}}

      <footer>
        © 2021
      </footer>
    </div>

  </body>

</html>